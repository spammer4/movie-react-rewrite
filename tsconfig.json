{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis" : true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,        
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "baseUrl": "./",
        "lib": ["es5", "dom", "es2015.promise"],
        "paths": {
            "@components/*": ["src/components/*"],
            "@styles/*" : ["src/styles/*"],
            "@store": ["src/store"], 
            "@store/*": ["src/store/*"],
            "@app/*": ["src/*"],
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
    "node_modules",
    "dist"
    ]
}